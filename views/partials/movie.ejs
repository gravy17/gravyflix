<li data-key="<%= movie.id %>">
  <a href="/<%= movie.id %>" class="card">
    <img
      src="<%= movie.image || '/images/default-movie.jpg' %>"
      class="card__image"
      alt="image for <%= movie.title %>"
    />
    <div class="card__overlay">
      <div class="card__header">
        <svg class="card__arc" xmlns="http://www.w3.org/2000/svg">
          <path d="M 40 80 c 40 0 40 -40 40 -40 v 40 Z" />
        </svg>
        <% if(canModify) { %>
        <span class="modifybtns">
          <button class="edit-btn" data-edit="<%= movie.id %>">
            Edit Movie<i class="edit-icon"></i>
          </button>
          <button class="delete-btn" data-delete="<%= movie.id %>">
            Delete Movie<i class="delete-icon"></i>
          </button>
        </span>
        <% } %>
        <div class="card__header-text">
          <h3 class="movie__title"><%= movie.title %></h3>
          <span>â‚¦</span><span class="movie__price"><%= movie.price %></span>
        </div>
      </div>
      <p class="movie__description"><%= movie.description %></p>
    </div>
  </a>
</li>
